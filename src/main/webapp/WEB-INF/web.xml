<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <display-name>WebStudy01</display-name>
  
  <context-param>
  	<param-name>movieFolder</param-name>
  	<param-value>D:/00.medias/movies</param-value>
  </context-param>
  <!-- FilterChain에 필터를 등록함 -->
  <filter>
  	<filter-name>CharacterEncodingFilter</filter-name>
  	<filter-class>kr.or.ddit.filter.CharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>CharacterEncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
  	<filter-name>GeneratePricipalFilter</filter-name>
  	<filter-class>kr.or.ddit.filter.auth.GeneratePricipalFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>GeneratePricipalFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>DecriptionServlet</servlet-name>
  	<servlet-class>kr.or.ddit.servlet02.DecriptionServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DecriptionServlet</servlet-name>
  	<url-pattern>/desc</url-pattern>
  </servlet-mapping>
